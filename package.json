    "@types/app-root-path": "^1.2.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.24",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^1.4.7",
